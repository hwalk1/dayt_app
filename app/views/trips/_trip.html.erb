  <%= link_to trip_path(trip), class: 'trip-link' do %>
  <div class="card-trip shadow" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= trip.dayts.first ? trip.dayts.first.photos.first.url : 'https://images.unsplash.com/photo-1488646953014-85cb44e25828?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1635&q=80' %>)">
    <h3><%= trip.title %></h3>
    <h3><%= trip.date.strftime('%-d %b %Y') %></h3>
  </div>
  <% end %>
