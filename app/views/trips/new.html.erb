<div class= "preferences">
  <div class='container'>
    <h1>Preferences</h1>
    <div class='pre-form'>
      <%= simple_form_for(@trip) do |f| %>
        <%= f.input :title %>

        <h2>Where?</h2>
        <%= f.input :location %>

        <h2>When?</h2>
        <%= f.input :date %>

        <h2>How Far?</h2>
        <%= f.input :distance %>

        <p>TAGS:</p>
        <%= render 'layouts/tags' %>

        <div class="text-center">
        <%= f.submit class: "full-btn" %>
        <% end %>
        </div>
    </div>
  </div>
</div>
