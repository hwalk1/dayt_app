<div class= "preferences">
  <div class='container'>
    <h1>Preferences</h1>
    <div class='pre-form'>
      <%= simple_form_for(@trip) do |f| %>
        <%= f.input :title, label: false %>

        <h2>Where?</h2>
        <%= f.input :location, label: false %>

        <h2>When?</h2>
        <%= f.input :date, label: false %>

        <h2>How Far?</h2>
        <%= f.input :distance, label: false %>

        <p>TAGS:</p>
        <%= render 'layouts/tags', f: f %>

        <h3>125 Dayts found</h3>
        <footer>
          <%= f.submit class: "full-btn" %>
        </footer>

        <% end %>
        </div>
    </div>
  </div>
</div>
