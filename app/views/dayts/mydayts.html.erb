<div class="container my-2 px-4">
  <h1 class="text-center pt-3 m-0">My Dayts</h1>
  <% @dayts.each do |dayt| %>
    <%= link_to dayt_path(dayt), class: 'trip-link' do %>
    <div class="card-trip shadow" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= dayt.photos ? dayt.photos.first.url : 'https://images.unsplash.com/photo-1488646953014-85cb44e25828?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1635&q=80' %>)">
      <h3><%= dayt.title %></h3>
    </div>
    <% end %>
  <% end %>
</div>
