<div data-controller='show-hide'>
  <div class="container overflow-hidden" data-show-hide-target='container'>
    <div class="swiper" data-controller='swiper'>
      <div class="swiper-wrapper">
        <% @dayts.first(6).each do |dayt|  %>
          <div class="swiper-slide" data-controller="trip-dayt">

          <%= render 'slide', dayt: dayt, trip: @trip %>

          </div>
        <% end %>
      </div>
    </div>
  </div>
  <%= render "shared/hidden_mapbox" %>

  <footer>
    <button class='btn map-btn' data-action='click->show-hide#toggle'>Map</button>
    <%= link_to "Next", itinerary_path(@trip), class: "btn next-btn" %>
  </footer>
</div>
