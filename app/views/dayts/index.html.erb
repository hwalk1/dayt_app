
<div class="container">
  <div class="swiper" data-controller='swiper'>
    <div class="swiper-wrapper">
      <% @dayts.first(6).each do |dayt|  %>
        <div class="swiper-slide" data-controller="trip-dayt">
          <%= cl_image_tag dayt.photos.first.key %>
          <% trip_dayt =  TripDayt.new %>
          <%= simple_form_for [@trip, trip_dayt],
            html: {
            class: 'decline',
            data: { action: "submit->trip-dayt#create", trip_dayt_target: "form" }
            } do |f| %>
            <%= f.hidden_field :dayt_id, value: dayt.id  %>
            <%= f.hidden_field :status, value: 'declined' %>
            <button><i class="fas fa-regular fa-xmark"></i></button>
          <% end %>
          <%= simple_form_for [@trip, trip_dayt],
            html: {
            class: 'accept',
            data: { action: "submit->trip-dayt#create", trip_dayt_target: "form" }
            } do |f| %>
            <%= f.hidden_field :dayt_id, value: dayt.id  %>
            <%= f.hidden_field :status, value: 'accepted'  %>
            <button><i class="fa-regular fa-heart"></i></button>
          <% end %>
          <div class="card-blue">
            <h2><%= dayt.title %></h2>
            <p><%= dayt.location %></p>
            <%= dayt.duration %>
            <%= dayt.price %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <%= render "mapbox" %>

<div class='container'>
 <div >
        <%= link_to "Next", itinerary_path,
        :class => "btn next-btn", :method => :get %>
  </div>

</div>
