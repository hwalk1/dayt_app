<% trip_dayt =  TripDayt.new %>
<%= simple_form_for [trip, trip_dayt],
html: {
  class: 'decline',
data: { action: "submit->trip-dayt#create", trip_dayt_target: "form" }
} do |f| %>
<%= f.hidden_field :dayt_id, value: dayt.id  %>
<%= f.hidden_field :status, value: 'declined' %>
<button><i class="fas fa-regular fa-xmark"></i></button>
<% end %>
<%= simple_form_for [trip, trip_dayt],
html: {
  class: 'accept',
data: { action: "submit->trip-dayt#create", trip_dayt_target: "form" }
} do |f| %>
<%= f.hidden_field :dayt_id, value: dayt.id  %>
<%= f.hidden_field :status, value: 'accepted'  %>
<button><i class="fa-regular fa-heart"></i></button>
<% end %>
<%= link_to dayt_path(dayt) do %>
  <%= cl_image_tag dayt.photos.first.key %>
  <div class="card-blue">
  <h2><%= dayt.title %></h2>
  <p><%= dayt.location %></p>
  <%= dayt.duration %>
  <%= dayt.price %>
  <% end %>
  </div>
